  file = {:home/ivan\_hanigan/references/Akita et al. - 2014 - Large scale air pollution estimation method combining land use regression and chemical transport modeling in a geo.pdf:pdf;:home/ivan\_hanigan/references/Akita et al. - 2014 - Large scale air pollution estimation method combining land use regression and chemical transport modeling in a (2).pdf:pdf},
  isbn = {0013-936X$\backslash$r1520-5851},
  issn = {1520-5851},
  journal = {Environmental science \& technology},
  number = {8},
  pages = {4452--9},
  pmid = {24621302},
  title = {{Large scale air pollution estimation method combining land use regression and chemical transport modeling in a geostatistical framework.}},
  url = {http://www.ncbi.nlm.nih.gov/pubmed/24621302},
  volume = {48},
