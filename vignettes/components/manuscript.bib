  keywords = {Adaptation,Adult,Agriculture,Agriculture: statistics \& numerical data,Climate Change,Climate Change: statistics \& numerical data,Depressive Disorder,Depressive Disorder: epidemiology,Depressive Disorder: psychology,Droughts,Droughts: statistics \& numerical data,Female,Humans,Incidence,Male,Middle Aged,New South Wales,New South Wales: epidemiology,Psychological,Rain,Risk Factors,Rural Population,Rural Population: statistics \& numerical data,Suicide,Suicide: psychology,Suicide: statistics \& numerical data,Suicide: trends},
  month = {aug},
  number = {35},
